<div clas="row" style="padding-top: 100px;">
  <span class="span4 center separate">
    <h2><%= t :comunicate %></h2>
    <p>
      <%= t :comunicate_text %>
    </p>
  </span>
  <span class="span4 center">
    <h2><%= t :interact %></h2>
    <p>
      <%= t :interact_text %>
    </p>
  </span>
  <span class="span3 hero-unit" id="login_box">
    <h4><%= t :fill_signup_form %></h4>
    <%= form_for @teacher do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.fields_for :index do |builder| %>
        <%= builder.label :slug %>
        <%= builder.text_field :slug %>
      <% end %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation%>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t(:sign_up), class: "btn btn-primary" %>
    <% end %>
  </span>
</div>

