<% content_for :content do %>
  <ul class="unstyled">
    <div class="row-fluid">
      <% if false %>
      <b>visualizar:</b>
      <%= link_to "recebidas", messages_classroom_path(@classroom) %> |
      <%= link_to "enviadas para a turma", messages_classroom_path(@classroom, show: "sent_messages") %>
      <% end %>
      <b>enviar:</b>
      <%= link_to t(:message_to_classroom), message_to_messageable_path(@classroom) %>
    </div>
    <hr>
    <%= render partial: "classrooms/message_item", collection: messages_to_show, as: :message, locals: { classroom: @classroom } %>
  </ul>
<% end %>

<%= render partial: "classrooms/base_classroom_dashboard", locals: { manager: true, current_showing: :messages }%>
